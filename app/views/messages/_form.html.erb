<%= form_with model: [room, message], data: { action: 'room#submit' },
  class: 'absolute bottom-2.5 text-center w-full' do |f| %>

  <%= f.text_field :content, class: 'max-w-full w-[500px]', placeholder: 'Enter text',
    data: { 'room-target': 'input' }, autocomplete: 'off' %>
  <%= f.submit 'Create Message',
    class: 'px-3 py-2 pointer bg-blue-600 hover:bg-blue-300 cursor-pointer text-white' %>
<% end %>
